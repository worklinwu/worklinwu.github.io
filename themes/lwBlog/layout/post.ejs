<div class="m-article-paging">
    <% if(page.prev){ %>
    <a class="prev-article" href="/<%= page.prev.path %>" title="上一篇：<%= page.prev.title %>">上一篇</a>
    <% } %>
    <% if(page.next){ %>
    <a class="next-article" href="/<%= page.next.path %>" title="下一篇：<%= page.next.title %>">下一篇</a>
    <% } %>
