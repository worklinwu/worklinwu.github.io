<section class="area-article-details clearfix">
    <div class="article-content">
        <div class="article-title"><%= page.title %></div>
        <div class="article-meta"><span>作者：<%= page.author %></span> ∷ <span>时间：<%= date(page.date, "YYYY-MM-DD") %></span></div>
        <article class="blog-article" id="j_article_markdown">
            <%- page.content %>
        </article>

        <!-- 多说评论框 -->
        <% if (page.comments){ %>
        <div class="ds-thread" data-thread-key="<%= page._id %>" data-title="<%= page.title %>" data-url="<%= page.permalink %>"></div>
        <% } %>

    </div>
